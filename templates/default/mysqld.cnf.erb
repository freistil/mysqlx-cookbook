#
# Generated by Chef for <%= node["hostname"] %>
#
# Local modifications will be overwritten.
#
# The MySQL database server configuration file.
#
# You can copy this to one of:
# - "/etc/mysql/my.cnf" to set global options,
# - "~/.my.cnf" to set user-specific options.
#
# One can use all long options that the program supports.
# Run program with --help to get a list of available options and with
# --print-defaults to see which it would actually understand and use.
#
# For explanations see
# http://dev.mysql.com/doc/mysql/en/server-system-variables.html

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket          = <%= node["mysqlx"]["server"]["socket"] %>
nice            = <%= node["mysqlx"]["nice"] %>

[mysqld]
#
# * Basic Settings
#

#
# * IMPORTANT
#   If you make changes to these settings and your system uses apparmor, you may
#   also need to also adjust /etc/apparmor.d/usr.sbin.mysqld.
#

user            = mysql
pid-file        = <%= node["mysqlx"]["server"]["pid_file"] %>
socket          = <%= node["mysqlx"]["server"]["socket"] %>
port            = <%= node["mysqlx"]["port"] %>
basedir         = <%= node["mysqlx"]["server"]["basedir"] %>
datadir         = <%= node["mysqlx"]["data_dir"] %>
tmpdir          = <%= node["mysqlx"]["server"]["tmpdir"].join(":") %>
skip-external-locking
skip-name-resolve = <%= node["mysqlx"]["tunable"]["skip-name-resolve"] %>

# Charset and Collation
character_set_server = <%= node["mysqlx"]["tunable"]["character_set_server"] %>
collation_server = <%= node["mysqlx"]["tunable"]["collation_server"] %>
lower_case_table_names = <%= node["mysqlx"]["tunable"]["lower_case_table_names"] %>
<%- if node["mysqlx"]["tunable"]["event_scheduler"] %>
event_scheduler = <%= node["mysqlx"]["tunable"]["event_scheduler"] %>
<%- end %>
skip-character-set-client-handshake = <%= node["mysqlx"]["tunable"]["skip-character-set-client-handshake"] %>
<%- if (node["mysqlx"]["tunable"]["lc_messages_dir"] && node["mysqlx"]["tunable"]["lc_messages"]) %>
lc_messages_dir	    = <%= node["mysqlx"]["lc_messages_dir"] %>
lc_messages	    = <%= node["mysqlx"]["lc_messages"] %>
<%- elsif (node["mysqlx"]["tunable"]["languages"]) %>
languages	    = <%= node["mysqlx"]["tunable"]["languages"] %>
<%- end %>

#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address            = <%= node["mysqlx"]["bind_address"] %>
#
# * Fine Tuning
#
key_buffer_size         = <%= node["mysqlx"]["tunable"]["key_buffer_size"] %>
max_allowed_packet      = <%= node["mysqlx"]["tunable"]["max_allowed_packet"] %>
thread_stack            = <%= node["mysqlx"]["tunable"]["thread_stack"] %>
thread_cache_size       = <%= node["mysqlx"]["tunable"]["thread_cache_size"] %>
sort_buffer_size        = <%= node["mysqlx"]["tunable"]["sort_buffer_size"] %>
read_buffer_size        = <%= node["mysqlx"]["tunable"]["read_buffer_size"] %>
read_rnd_buffer_size    = <%= node["mysqlx"]["tunable"]["read_rnd_buffer_size"] %>
join_buffer_size        = <%= node["mysqlx"]["tunable"]["join_buffer_size"] %>

auto_increment_increment = <%= node["mysqlx"]["auto_increment_increment"] %>
auto_increment_offset    = <%= node["mysqlx"]["auto_increment_offset"] %>

max_connections         = <%= node["mysqlx"]["tunable"]["max_connections"] %>
max_connect_errors      = <%= node["mysqlx"]["tunable"]["max_connect_errors"] %>
concurrent_insert       = <%= node["mysqlx"]["tunable"]["concurrent_insert"] %>
connect_timeout         = <%= node["mysqlx"]["tunable"]["connect_timeout"] %>
wait_timeout            = <%= node["mysqlx"]["tunable"]["wait_timeout"] %>
net_read_timeout        = <%= node["mysqlx"]["tunable"]["net_read_timeout"] %>
net_write_timeout       = <%= node["mysqlx"]["tunable"]["net_write_timeout"] %>
back_log                = <%= node["mysqlx"]["tunable"]["back_log"] %>
table_open_cache        = <%= node["mysqlx"]["tunable"]["table_open_cache"] %>

tmp_table_size          = <%= node["mysqlx"]["tunable"]["tmp_table_size"] %>
max_heap_table_size     = <%= node["mysqlx"]["tunable"]["max_heap_table_size"] %>
bulk_insert_buffer_size = <%= node["mysqlx"]["tunable"]["bulk_insert_buffer_size"] %>
open_files_limit        = <%= node["mysqlx"]["tunable"]["open_files_limit"] %>

# Default Table Settings
<%- if node["mysqlx"]["tunable"]["sql_mode"] %>
sql_mode                = "<%= node["mysqlx"]["tunable"]["sql_mode"] %>"
<%- end %>

#
# * Query Cache Configuration
#
query_cache_limit       = <%= node["mysqlx"]["tunable"]["query_cache_limit"] %>
query_cache_size        = <%= node["mysqlx"]["tunable"]["query_cache_size"] %>
#
# * Logging
#
# Both location gets rotated by the cronjob.
# Be aware that this log type is a performance killer.
#log            = /var/log/mysql/mysql.log
#
# Error logging goes to syslog. This is a Debian improvement :)
<%- if node["mysqlx"]["tunable"]["log_error"] %>
log_error = <%= node["mysqlx"]["tunable"]["log_error"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["log_warnings"] %>
log_warnings
<%- end %>
#
# * Replication
#


#
# Here you can see queries with especially long duration
<%- if node["mysqlx"]["server"]["slow_query_log"] %>
slow_query_log      = 1
slow_query_log_file = <%= node["mysqlx"]["server"]["slow_query_log_file"] %>
<%- else %>
log_slow_queries    = <%= node["mysqlx"]["server"]["log_slow_queries"] %>
<%- end %>

long_query_time = <%= node["mysqlx"]["tunable"]["long_query_time"] %>
<%- if node["mysqlx"]["tunable"]["log_queries_not_using_indexes"] and node["mysqlx"]["tunable"]["slow_query_log"]  %>
log-queries-not-using-indexes
<%- end %>
#
# The following can be used as easy to replay backup logs or for replication.
# note: if you are setting up a replication slave, see README.Debian about
#       other settings you may need to change.
server-id = <%= node["mysqlx"]["tunable"]["server_id"] %>
<%- unless node["mysqlx"]["tunable"]["log_bin"].nil? %>
log_bin = <%= node["mysqlx"]["tunable"]["log_bin"] %>
binlog_format = <%= node["mysqlx"]["tunable"]["binlog_format"] %>
log_slave_updates = <%= node["mysqlx"]["tunable"]["log_slave_updates"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["log_bin_trust_function_creators"] %>
log_bin_trust_function_creators
<%- end %>
expire_logs_days        = <%= node["mysqlx"]["tunable"]["expire_logs_days"] %>
max_binlog_size         = <%= node["mysqlx"]["tunable"]["max_binlog_size"] %>
binlog_cache_size       = <%= node["mysqlx"]["tunable"]["binlog_cache_size"] %>
<%- if node["mysqlx"]["tunable"]["relay_log"] %>
relay_log               = <%= node["mysqlx"]["tunable"]["relay_log"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["relay_log_index"] %>
relay_log_index         = <%= node["mysqlx"]["tunable"]["relay_log_index"] %>
<%- end %>

<%- if node["mysqlx"]["tunable"]["replicate_do_db"] %>
replicate_do_db             = <%= node["mysqlx"]["tunable"]["replicate_do_db"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["replicate_do_table"] %>
replicate_do_table          = <%= node["mysqlx"]["tunable"]["replicate_do_table"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["replicate_ignore_db"] %>
replicate_ignore_db         = <%= node["mysqlx"]["tunable"]["replicate_ignore_db"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["replicate_ignore_table"] %>
replicate_ignore_table      = <%= node["mysqlx"]["tunable"]["replicate_ignore_table"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["replicate_wild_do_table"] %>
replicate_wild_do_table     = <%= node["mysqlx"]["tunable"]["replicate_wild_do_table"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["replicate_wild_ignore_table"] %>
replicate_wild_ignore_table = <%= node["mysqlx"]["tunable"]["replicate_wild_ignore_table"] %>
<%- end %>

sync_binlog             = <%= node["mysqlx"]["tunable"]["sync_binlog"] %>
skip_slave_start = <%= node["mysqlx"]["tunable"]["skip_slave_start"] %>
<%- if node["mysqlx"]["tunable"]["read_only"] %>
read_only = 1
<%- end %>

<%- if node["mysqlx"]["tunable"]["transaction-isolation"] %>
transaction-isolation = <%= node["mysqlx"]["tunable"]["transaction-isolation"] %>
<%- end %>

<%- if node["mysqlx"]["tunable"]["slave_compressed_protocol"] %>
slave_compressed_protocol = <%= node["mysqlx"]["tunable"]["slave_compressed_protocol"] %>
<%- end %>
#
# * InnoDB
#
# InnoDB is enabled by default with a 10MB datafile in /var/lib/mysql/.
# Read the manual for more InnoDB related options. There are many!
# You might want to disable InnoDB to shrink the mysqld process by circa 100MB.
#skip-innodb

innodb_write_io_threads         = <%= node["mysqlx"]["tunable"]["innodb_write_io_threads"] %>
innodb_io_capacity              = <%= node["mysqlx"]["tunable"]["innodb_io_capacity"] %>
innodb_read_io_threads          = <%= node["mysqlx"]["tunable"]["innodb_read_io_threads"] %>
innodb_buffer_pool_instances    = <%= node["mysqlx"]["tunable"]["innodb_buffer_pool_instances"] %>

## InnoDB Plugin Independent Settings
innodb_data_home_dir            = <%= node["mysqlx"]["data_dir"]  %>
innodb_log_group_home_dir       = <%= node["mysqlx"]["server"]["directories"]["log_dir"]  %>
<%- if node["mysqlx"]["log_files_in_group"] %>
innodb_log_files_in_group       = <%= node["mysqlx"]["log_files_in_group"] %>
<%- end %>

<%- if node["mysqlx"]["innodb_status_file"] %>
innodb_status_file
<%- end %>
<%- if node["mysqlx"]["tunable"]["innodb_file_per_table"] %>
innodb_file_per_table
<%- end %>
<%- if node["mysqlx"]["tunable"]["innodb_large_prefix"] %>
innodb_large_prefix = ON
<%- end %>
innodb_file_format = <%= node["mysqlx"]["tunable"]["innodb_file_format"] %>
innodb_table_locks = <%= node["mysqlx"]["tunable"]["innodb_table_locks"] %>
innodb_lock_wait_timeout = <%= node["mysqlx"]["tunable"]["innodb_lock_wait_timeout"] %>
<%- if node["mysqlx"]["tunable"]["innodb_rollback_on_timeout"] %>
innodb_rollback_on_timeout
<%- end %>
innodb_commit_concurrency       = <%= node["mysqlx"]["tunable"]["innodb_commit_concurrency"] %>
innodb_thread_concurrency       = <%= node["mysqlx"]["tunable"]["innodb_thread_concurrency"] %>
innodb_support_xa = <%= node["mysqlx"]["tunable"]["innodb_support_xa"] %>
<%- if node["mysqlx"]["tunable"]["skip-innodb-doublewrite"] %>
skip-innodb-doublewrite
<%- end %>

innodb_buffer_pool_size = <%= node["mysqlx"]["tunable"]["innodb_buffer_pool_size"] %>
innodb_log_file_size    = <%= node["mysqlx"]["tunable"]["innodb_log_file_size"] %>
innodb_data_file_path   = <%= node["mysqlx"]["tunable"]["innodb_data_file_path"] %>
innodb_flush_log_at_trx_commit = <%= node["mysqlx"]["tunable"]["innodb_flush_log_at_trx_commit"] %>
<%- if node["mysqlx"]["tunable"]["innodb_flush_method"] %>
innodb_flush_method     = <%= node["mysqlx"]["tunable"]["innodb_flush_method"] %>
<%- end %>
innodb_log_buffer_size  = <%= node["mysqlx"]["tunable"]["innodb_log_buffer_size"] %>
<%- if node["mysqlx"]["tunable"]["innodb_adaptive_flushing"] %>
innodb_adaptive_flushing  = <%= node["mysqlx"]["tunable"]["innodb_adaptive_flushing"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["innodb_adaptive_flushing_method"] %>
innodb_adaptive_flushing_method = <%= node["mysqlx"]["tunable"]["innodb_adaptive_flushing_method"] %>
<%- end %>
<%- if node["mysqlx"]["tunable"]["innodb_adaptive_checkpoint"] %>
innodb_adaptive_checkpoint = <%= node["mysqlx"]["tunable"]["innodb_adaptive_checkpoint"] %>
<%- end %>

<% if node["mysqlx"]["server"]["skip_federated"] %>
#
# * Federated
#
# The FEDERATED storage engine is disabled since 5.0.67 by default in the .cnf files
